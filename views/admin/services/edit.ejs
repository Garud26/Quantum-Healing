<%- include("../layouts/header") %>
<%- include("../layouts/sidebar") %>

<div class="content-body">
  <div class="container-fluid">
    <div class="card">
      <div class="card-header">
        <h4>Edit Service</h4>
      </div>
      <div class="card-body">
        <form action="/admin/services/edit/<%= service.id %>" method="POST" enctype="multipart/form-data">
          <div class="row">
            <div class="col-md-8 mb-3">
              <label>Title</label>
              <input type="text" name="title" class="form-control" value="<%= service.title %>" required>
            </div>
            <div class="col-md-4 mb-3">
              <label>Icon Class</label>
              <input type="text" name="icon" class="form-control" value="<%= service.icon || '' %>">
            </div>
            <div class="col-12 mb-3">
              <label>Description</label>
              <textarea name="description" class="form-control" rows="5" required><%= service.description %></textarea>
            </div>
            <div class="col-md-6 mb-3">
              <label>Image</label>
              <input type="file" name="image" class="form-control" accept="image/*">
              <% if (service.image) { %>
                <img src="/uploads/<%= service.image %>" width="150" class="mt-2 rounded">
              <% } %>
            </div>
            <div class="col-md-6 mb-3">
              <label>Order</label>
              <input type="number" name="order_no" class="form-control" value="<%= service.order_no %>">
            </div>
            <div class="col-12">
              <button type="submit" class="btn btn-primary">Update Service</button>
              <a href="/admin/services" class="btn btn-secondary">Back</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include("../layouts/footer") %>
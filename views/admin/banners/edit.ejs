<%- include("../layouts/header") %>
<%- include("../layouts/sidebar") %>

<div class="content-body">
  <div class="container-fluid">
    <div class="card">
      <div class="card-header">
        <h4>Edit Banner</h4>
      </div>
      <div class="card-body">
        <form action="/admin/banners/edit/<%= banner.id %>" method="POST" enctype="multipart/form-data">
          <div class="row">
            <div class="col-md-6 mb-3">
              <label>Title</label>
              <input type="text" name="title" value="<%= banner.title %>" class="form-control" required>
            </div>
            <div class="col-md-6 mb-3">
              <label>Subtitle</label>
              <input type="text" name="subtitle" value="<%= banner.subtitle || '' %>" class="form-control">
            </div>
            <div class="col-12 mb-3">
              <label>New Image (leave empty to keep current)</label>
              <input type="file" name="image" class="form-control" accept="image/*">
              <% if (banner.image) { %>
                <div class="mt-3">
                  <img src="/uploads/<%= banner.image %>" class="img-thumbnail" style="max-height:200px;">
                </div>
              <% } %>
            </div>
            <div class="col-md-6 mb-3">
              <label>Order</label>
              <input type="number" name="order_no" value="<%= banner.order_no %>" class="form-control">
            </div>
            <div class="col-12">
              <button type="submit" class="btn btn-primary">Update Banner</button>
              <a href="/admin/banners" class="btn btn-secondary">Back</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include("../layouts/footer") %>
<div class="testimonial ptb-90 bg-light">
  <div class="container">

    <div class="heading w-63 mx-auto text-center mb-5">
      <h3>Reviews about our services</h3>
      <p class="size-20">Hear from our happy patients.</p>
    </div>

    <div class="swiper testimonialSwiper">
      <div class="swiper-wrapper">

        <% if (ratings && ratings.length > 0) { %>

          <% ratings.forEach(rating => { %>

          <div class="swiper-slide">
            <div class="testimonial-content text-center p-4">
              <img src="/front-assets/images/testimonial-avatar.png" 
                class="rounded-circle mb-3"
                width="90" height="90">

              <div class="testi-reviews mb-2">
                <% for(let i=1; i<=5; i++) { %>
                  <i class="fa-star <%= i <= rating.rating ? 'fas text-warning' : 'far text-muted' %>"></i>
                <% } %>
              </div>

              <p class="fst-italic">"<%= rating.message %>"</p>
              <h6><%= rating.name %></h6>
              <small class="text-muted">Happy Patient</small>
            </div>
          </div>

          <% }) %>

        <% } %>

      </div>

      <div class="swiper-pagination"></div>
      <div class="swiper-button-next"></div>
      <div class="swiper-button-prev"></div>

    </div>

  </div>
</div> 

